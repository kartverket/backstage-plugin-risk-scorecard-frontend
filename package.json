{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "yarn workspaces foreach -A --include backend --include app --parallel --jobs unlimited -v -i run start",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "build:backend": "yarn workspace backend build",
    "build:all": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "test:e2e": "playwright test",
    "fix": "backstage-cli repo fix",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "new": "backstage-cli new --scope internal",
    "delete_node_modules": "rm -rf node_modules; rm -rf packages/app/node_modules; rm -rf plugins/security-metrics-backend/node_modules; rm -rf plugins/security-metrics/node_modules; rm -rf packages/backend/node_modules",
    "delete_yarn_lock": "rm yarn.lock",
    "fresh_clean": "npm run delete_node_modules; npm run delete_yarn_lock",
    "fresh_start": "npm run fresh_clean; yarn install"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.29.6",
    "@backstage/e2e-test-utils": "^0.1.1",
    "@playwright/test": "^1.32.3",
    "concurrently": "^8.0.0",
    "lerna": "^7.3.0",
    "node-gyp": "^10.0.0",
    "prettier": "^2.3.2",
    "typescript": "~5.2.0"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@mui/material": "5.16.4",
    "swagger-ui-react": "5.10.5",
    "jsonpath-plus": "^10.2.0",
    "koa": "2.15.4",
    "@module-federation/dts-plugin": "0.9.1",
    "@node-saml/node-saml": "5.0.1",
    "xml-crypto": "6.0.1"
  },
  "prettier": "@backstage/cli/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mui/material": "5.16.4",
    "@types/react": "^17"
  },
  "packageManager": "yarn@4.4.1+sha512.f825273d0689cc9ead3259c14998037662f1dcd06912637b21a450e8da7cfeb4b1965bbee73d16927baa1201054126bc385c6f43ff4aa705c8631d26e12460f1"
}
